<Window x:Class="DZ11WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DZ11WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="330" Width="400" MinHeight="330" MinWidth="200">
    
    
    <StackPanel Background="#393939" Height="auto" Width="auto">
        <TextBox Name="TBQ" Margin="10" Height="100" Background="White" 
                   Text="[ Введите свой вопрос ]" FontStyle="Oblique">
        </TextBox>

        <Button Margin="10" Width="100" HorizontalAlignment="Left" Content="Получить ответ!" 
                Click="Button_Click">
        </Button>

        <TextBox Name="TBA" Margin="10" Height="100" Background="White" 
                   Text="[ Тут будет ответ ]" FontStyle="Italic" IsReadOnly="True">
        </TextBox>
    </StackPanel>
    
    
</Window>
